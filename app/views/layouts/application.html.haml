!!! Strict
%html{html_attrs}

	%head
		%title
			= h(yield(:title) || "Untitled")
		%meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
		= stylesheet_link_tag 'application'
		= formtastic_stylesheet_link_tag
		= yield(:head)

	%body
		#container
			#menu
				%ul
					%li= link_to 'CIDRs', cidrs_path
					%li= link_to 'IP addresses', ip_addresses_path
					%li= link_to 'Hosts', hosts_path
			- flash.each do |name, msg|
				= content_tag :div, msg, :id => "flash_#{name}"
      
			- if show_title?
				%h1=h yield(:title)

			= yield

			#footer
				%p
					%a{:href => "http://projects.codenursery.com/projects/iptracker"}IP Tracker
