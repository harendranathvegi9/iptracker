- title "Ip Addresses"

%table
  %tr
    %th IP address
    %th DNS Name
    %th Cidr
    %th Comments
    %th Free
  - for ip_address in @ip_addresses
    %tr
      %td= h ip_address.ip_address
      %td= h ip_address.name
      %td= h ip_address.cidr.name
      %td= h ip_address.comments
      %td= h ip_address.free
      %td= link_to 'Show', ip_address
      %td= link_to 'Edit', edit_ip_address_path(ip_address)

%p= will_paginate @ip_addresses